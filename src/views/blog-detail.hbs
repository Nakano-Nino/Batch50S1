        <div class="container">    
            <div class="title-container">
                <h1>{{data.name}}</h1>
            </div>
            <div class="wrap">
                <div class="top-item">
                    <div class="img-container">
                        <img src="/{{data.image}}" alt="picture" style="width: 100%;">
                    </div>
                    <div class="info-container">
                        <div class="duration">
                            <h2>Duration</h2>
                            <p>
                                <i class="fa-solid fa-calendar-days fa-xl" style="color: #000000; margin-right: 5px;"></i>
                                <span style="font-weight: bold;">{{data.startDate}} - {{data.endDate}}</span> 
                            </p>
                            <p>
                                <i class="fa-solid fa-clock fa-xl" style="color: #000000;"></i>
                                <span style="font-weight: bold;">{{data.duration}}</span>
                            </p>
                        </div>
                        <h2>Technologies</h2>
                        <div class="technologies">
                            <div class="tech1">
                                {{#each data.technologies}}
                                <p style="margin-right: 20px; font-weight:bold;">
                                    <img src="/svg/{{this}}.svg" style="margin-right: 5px;">{{this}}
                                </p>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bottom-item">
                    <p>
                        {{data.description}}
                    </p>
                </div>
            </div>
        </div>

